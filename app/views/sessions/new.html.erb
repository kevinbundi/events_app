
<div class="text-center events_image">
	<img src="<%=asset_path('events_gradient_3.png')%>" alt="events" class="img-fluid rounded">
</div>

<div class="col-sm-6 col-md-7 col-lg-3 login">

	<p style="color: green;"><%=flash[:register_message]%></p>
	<form action="/sessions" method="post">
		<p style="color:red"><%=flash[:login_error]%></p>
		<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
		<div class="form-group">
			<input type="email" name="email" placeholder="Email Address" class="form-control">
		</div>
		<div class="form-group">
			<input type="password" name="password" placeholder="Password" class="form-control">
		</div>
		<div class="form-group">
			<input type="submit" value="LOGIN" class="btn btn-primary btn-block">
		</div>
		<p>New Member? <a href="/users/new">sign up</a></p>
	</form>
</div>
