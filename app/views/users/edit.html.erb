<div class="col-md-5 col-md-offset-3 update" >
	<form action="/users/<%=current_user.id%>" method="post">
	<h3 style="text-align: center;">Edit Your Profile</h3>
	<% if flash[:update_errors] %>
		<%flash[:update_errors].each do |e|%>
			<p style="color:red"><%=e%></p>
		<%end%>
	<%end%>
		<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
		<div class="form-group edit_form-group">
			<input type="text" name="user[first_name]" value="<%=current_user.first_name%>" class="form-control">
		</div>
		<div class="form-group edit_form-group">
			<input type="text" name="user[last_name]" value="<%=current_user.last_name%>" class="form-control">
		</div>
		<div class="form-group edit_form-group"> 
			<input type="email" name="user[email]" value="<%=current_user.email%>" class="form-control">
		</div>
		<div class="form-group col-xs-9 col-md-9 edit_form-group" style="padding: 0 0px 0 0px;">
			<input type="text" name="user[location]" value="<%=current_user.location%>" class="form-control">
		</div>
		<div class="form-group col-xs-3 col-md-3 edit_form-group" style="padding-right: 0px;" value="<%=current_user.location%>">
