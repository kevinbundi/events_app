<div>
	<div class="col-md-12">
		<div class="col-md-5">
		<h4>Your Profile</h4>
			<form class="form-horizontal">
				<div class="form-group">
					<h5 class="col-xs-5 col-sm-2 col-md-4">First Name :</h5>
					<h5 class="col-xs-7 col-sm-10 col-md-6"><%=@user.first_name%></h5>

					<h5 class="col-xs-5 col-sm-2 col-md-4">Last Name :</h5>
					<h5 class="col-xs-7 col-sm-10 col-md-6"><%=@user.last_name%></h5>

					<h5 class="col-xs-5 col-sm-2 col-md-4">Email:</h5>
					<h5 class="col-xs-7 col-sm-10 col-md-6"><%=@user.email%></h5>
				
					<h5 class="col-xs-5 col-sm-2 col-md-4">Location:</h5>
					<h5 class="col-xs-7 col-sm-10 col-md-6"><%=@user.location%></h5>

					<h5 class="col-xs-5 col-sm-2 col-md-4">State:</h5>
					<h5 class="col-xs-7 col-sm-10 col-md-6"><%=@user.state%></h5>
				</div>
		</div>
	</div>

	<div class="col-md-6 your_events">
		<h4>Events you have created</h4>
		<div class="table-responsive">
			<table class="table table-bordered table-hover">
				<thead>
					<th>Name</th>
					<th>Date</th>
					<th>Location</th>
					<th>State</th>
				</thead>
				<tbody>
					<% if @events_created %>
						<% @events_created.each do |ec| %>
							<tr>
								<td><a href="/events/<%=ec.id%>"><%=ec.name%></a></td>
								<td><%=ec.date%></td>
								<td><%=ec.location%></td>
								<td><%=ec.state%></td>
							</tr>		
						<%end%>
					<%else%>
							<p>You have not created any event</p>	
					<%end%>
				</tbody>
			</table>
		</div>
	</div>

	<div class="col-md-6 joined_events" >
		<h4>Events you have joined</h4>
		<div class="table-responsive">
			<table class="table table-bordered table-hover">
				<% if @events_attending %>
					<thead>
						<th>Name</th>
						<th>Date</th>
						<th>Location</th>
						<th>State</th>
					</thead>
					<tbody>
						<% @events_attending.each do |ea| %>
							<tr>
								<td><a href="/events/<%=ea.id%>"><%=ea.name%></a></td>
								<td><%=ea.date%></td>
								<td><%=ea.location%></td>
								<td><%=ea.state%></td>
							</tr>
						<%end%>
					</tbody>
				<%else%>
					<p>You have not joined any event</p>
				<%end%>	
			</table>
		</div>
	</div>
</div>
